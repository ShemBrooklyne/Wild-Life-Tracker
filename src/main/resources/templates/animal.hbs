
{{#partial "content"}}
        <div class="container-fluid">
            <div class = "card content-stuff">
                <h1></h1>
                <h4>Animal ID: {{animal_id}} </h4>

                <p>Click here to report a sighting <a href="/sightings/new">Sightings</a>.</p>
                <h3>sightings</h3>
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th scope="col">Animal ID</th>
                        <th scope="col">Spotted By</th>
                        <th scope="col">Location</th>
                        <th scope="col">Time Spotted</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td> {{animal_id}} </td>
                        <td>{{ranger_name}}</td>
                        <td>{{location}}</td>
                        <td>{{sighting}}</td>
                    </tr>
                    <tbody>
                </table>
            </div>
        </div>

    </div>

{{/partial}}
